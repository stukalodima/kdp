<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://contractBrowse.caption"
        focusComponent="contractsTable"
        messagesPack="com.itk.kdp.web.screens.contract">
    <data readOnly="true">
        <collection id="contractsDc"
                    class="com.itk.kdp.entity.Contract">
            <view extends="_local"/>
            <loader id="contractsDl">
                <query>
                    <![CDATA[select e from kdp_Contract e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contractsTable"
            spacing="true">
        <filter id="filter"
                applyTo="contractsTable"
                dataLoader="contractsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="contractsTable"
                    width="100%"
                    dataContainer="contractsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="state"/>
                <column id="date"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="contractsTable.create"/>
                <button id="editBtn" action="contractsTable.edit"/>
                <button id="removeBtn" action="contractsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
