<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://regionBrowse.caption"
        focusComponent="regionsTable"
        messagesPack="com.itk.kdp.web.screens.region">
    <data readOnly="true">
        <collection id="regionsDc"
                    class="com.itk.kdp.entity.Region">
            <view extends="_local"/>
            <loader id="regionsDl">
                <query>
                    <![CDATA[select e from kdp_Region e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="regionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="regionsTable"
                dataLoader="regionsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="regionsTable"
                    width="100%"
                    dataContainer="regionsDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="nameRegion"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="regionsTable.create"/>
                <button id="editBtn" action="regionsTable.edit"/>
                <button id="removeBtn" action="regionsTable.remove"/>
                <button id="excelBtn" action="regionsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
