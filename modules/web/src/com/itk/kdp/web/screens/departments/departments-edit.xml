<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://departmentsEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.departments">
    <data>
        <instance id="departmentsDc"
                  class="com.itk.kdp.entity.Departments">
            <view extends="_local">
                <property name="approvalManager" view="_minimal"/>
                <property name="companyId" view="_minimal"/>
                <property name="pId" view="_minimal"/>
                <property name="managerId" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="companyIdsDc" class="com.itk.kdp.entity.Organizations" view="_minimal">
            <loader id="companyIdsDl">
                <query>
                    <![CDATA[select e from kdp_Organizations e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="departmentsDc">
            <column width="350px">
                <textField id="codeField" property="code"/>
                <textField id="nameField" property="name"/>
                <textField id="departmentEnField" property="departmentEn"/>
                <textField id="departmentUaField" property="departmentUa"/>
                <textField id="departmentRuField" property="departmentRu"/>
                <lookupPickerField id="companyIdField" optionsContainer="companyIdsDc" property="companyId">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <pickerField id="approvalManagerField" property="approvalManager">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="pIdField" property="pId">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="managerIdField" property="managerId">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <maskedField id="departmentIdField" mask="hhhhhhhh-hhhh-hhhh-hhhh-hhhhhhhhhhhh"
                             property="departmentId"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
