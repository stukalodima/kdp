<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://departmentsEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.departments">
    <data>
        <instance id="departmentsDc"
                  class="com.itk.kdp.entity.Departments">
            <view extends="_local">
                <property name="organization" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="organizationsDc" class="com.itk.kdp.entity.Organizations" view="_minimal">
            <loader id="organizationsDl">
                <query>
                    <![CDATA[select e from kdp_Organizations e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="departmentsDc">
            <column width="500px">
                <textField id="codeField" property="code"/>
                <textField id="nameField" property="name"/>
                <lookupPickerField id="organizationField" optionsContainer="organizationsDc" property="organization">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
