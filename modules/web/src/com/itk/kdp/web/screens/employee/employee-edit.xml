<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employeeEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.employee">
    <data>
        <instance id="employeeDc"
                  class="com.itk.kdp.entity.Employee">
            <view extends="_local">
                <property name="company" view="_minimal"/>
                <property name="street" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="companiesDc" class="com.itk.kdp.entity.Company" view="_minimal">
            <loader id="companiesDl">
                <query>
                    <![CDATA[select e from kdp_Company e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="employeeDc">
            <column width="400px">
                <textField id="tabNumberField" property="tabNumber"/>
                <textField id="fioField" property="fio"/>
                <textField id="firstNameField" property="firstName"/>
                <textField id="secondNameField" property="secondName"/>
                <textField id="lastNameField" property="lastName"/>
                <dateField id="birthDateField" property="birthDate"/>
                <lookupPickerField id="companyField" optionsContainer="companiesDc" property="company">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <pickerField id="streetField" property="street"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
