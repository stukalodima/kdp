<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://organizationsEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.organizations">
    <data>
        <instance id="organizationsDc"
                  class="com.itk.kdp.entity.Organizations">
            <view extends="_local">
                <property name="countryRegistration" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="countriesesDc" class="com.itk.kdp.entity.Countries">
            <view extends="_local"/>
            <loader id="countriesesDl">
                <query>
                    <![CDATA[select e from kdp_Countries e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode
            width="70%" forceDialog="true" height="AUTO" resizable="true"/>
    <layout expand="body" spacing="true" width="100%">
        <scrollBox id="body">
            <form id="form" dataContainer="organizationsDc" width="100%">
                <column width="50%">
                    <textField id="codeField" property="code" width="100%" editable="false"/>
                    <textField id="organizationsEnField" property="organizationsEn" width="100%" required="true"/>
                    <dateField id="dateRegistrationField" property="dateRegistration" width="100%"/>
                    <textField id="fullNameField" property="fullName" width="100%" colspan="2"
                               contextHelpText="mainMsg://form.msg.field.fullNameInfo" required="true"/>
                    <textField id="codeRegistrationField" property="codeRegistration" width="100%"/>

                </column>
                <column width="50%">
                    <textField id="organizationsUaField" property="organizationsUa" width="100%" required="true"/>
                    <textField id="organizationsRuField" property="organizationsRu" width="100%" required="true"/>
                    <lookupPickerField id="countryRegistrationField" property="countryRegistration" width="100%"
                                       optionsContainer="countriesesDc">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                    <form id="options" width="100%" dataContainer="organizationsDc" align="MIDDLE_LEFT">
                        <column width="50%">
                            <checkBox id="entityField" property="entity" width="100%"/>
                        </column>
                        <column width="50%">
                            <checkBox id="activeField" property="active" width="100%"/>
                        </column>
                    </form>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true" align="MIDDLE_CENTER">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
