<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://ideaEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.idea">
    <data>
        <instance id="ideaDc"
                  class="com.itk.kdp.entity.Idea">
            <view extends="_local">
                <property name="author" view="_minimal"/>
                <property name="manager" view="_minimal"/>
                <property name="executor" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="600px"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="ideaDc" width="100%">
            <column width="100%">
                <textField id="nameField" property="name" description="msg://nameField.description"
                inputPrompt="msg://nameField.inputPrompt"
                width="100%"/>
                <textArea id="descriptionField" property="description" rows="5" width="100%"
                description="msg://descriptionField.description"
                inputPrompt="msg://descriptionField.inputPrompt"/>
                <textArea id="problemSolveField" property="problemSolve" rows="5" width="100%"
                description="msg://problemSolveField.description"
                inputPrompt="msg://problemSolveField.inputPrompt" captionAsHtml="true"
                caption="msg://problemSolveField.caption"/>
                <textArea id="benefitsField" property="benefits" rows="5" width="100%"
                description="msg://benefitsField.description" inputPrompt="msg://benefitsField.inputPrompt"
                captionAsHtml="true" caption="msg://benefitsField.caption"/>
                <checkBox id="automationField" property="automation" width="100%"/>
                <textArea id="resourcesField" property="resources" rows="5" width="100%"
                description="msg://resourcesField.description" descriptionAsHtml="true"
                inputPrompt="msg://resourcesField.inputPrompt" caption="msg://resourcesField.caption"
                captionAsHtml="true"/>
                <pickerField id="executorField" property="executor" width="100%" captionAsHtml="true"
                caption="msg://executorField.caption" visible="false">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="authorField" property="author" width="100%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="managerField" property="manager" width="100%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
