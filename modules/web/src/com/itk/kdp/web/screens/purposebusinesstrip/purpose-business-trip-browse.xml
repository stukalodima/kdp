<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://purposeBusinessTripBrowse.caption"
        focusComponent="purposeBusinessTripsTable"
        messagesPack="com.itk.kdp.web.screens.purposebusinesstrip">
    <data readOnly="true">
        <collection id="purposeBusinessTripsDc"
                    class="com.itk.kdp.entity.PurposeBusinessTrip">
            <view extends="_local"/>
            <loader id="purposeBusinessTripsDl">
                <query>
                    <![CDATA[select e from kdp_PurposeBusinessTrip e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="purposeBusinessTripsTable"
            spacing="true">
        <filter id="filter"
                applyTo="purposeBusinessTripsTable"
                dataLoader="purposeBusinessTripsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="purposeBusinessTripsTable"
                    width="100%"
                    dataContainer="purposeBusinessTripsDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="add" type="add"/>
                <action id="exclude" type="exclude"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="purposeBusinessTripsTable.create"/>
                <button id="editBtn" action="purposeBusinessTripsTable.edit"/>
                <button id="removeBtn" action="purposeBusinessTripsTable.remove"/>
                <button id="refreshBtn" action="purposeBusinessTripsTable.refresh"/>
                <button id="addBtn" action="purposeBusinessTripsTable.add"/>
                <button id="excludeBtn" action="purposeBusinessTripsTable.exclude"/>
                <button id="excelBtn" action="purposeBusinessTripsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
