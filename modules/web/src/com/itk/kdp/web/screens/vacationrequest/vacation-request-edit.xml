<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://vacationRequestEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.vacationrequest">
    <data>
        <instance id="vacationRequestDc"
                  class="com.itk.kdp.entity.VacationRequest">
            <view extends="_local">
                <property name="employee" view="_base">
                    <property name="company"/>
                    <property name="department"/>
                    <property name="position"/>
                    <property name="manager" view="_base">
                        <property name="company"/>
                        <property name="user" view="_local"/>
                    </property>
                    <property name="approvalManager" view="_base">
                        <property name="company"/>
                        <property name="user" view="_local"/>
                    </property>
                    <property name="vacationManager" view="_base">
                        <property name="company"/>
                        <property name="user" view="_local"/>
                    </property>

                </property>
                <property name="company" view="_local"/>
                <property name="department" view="_local"/>
                <property name="position" view="_local"/>
                <property name="coordinator" view="_base">
                    <property name="company"/>
                    <property name="department"/>
                    <property name="position"/>
                    <property name="manager" view="_base">
                        <property name="company"/>
                        <property name="user" view="_local"/>
                    </property>
                </property>
                <property name="vacationType" view="_base"/>
                <property name="initiator" view="_base">
                </property>
                <property name="documents" view="_local">
                    <property name="document" view="browse"/>
                    <property name="author" view="_local"/>
                </property>
                <property name="procInstance" view="procInstance-full"/>
            </view>
            <loader id="vacationRequestDl"/>
            <collection id="procAttachmentsDc" property="documents"/>
        </instance>
        <collection id="employeesDc" class="com.itk.kdp.entity.Employees" view="_base">
            <loader id="employeesDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="companiesDc" class="com.itk.kdp.entity.Organizations" view="_local">
            <loader id="companiesDl">
                <query>
                    <![CDATA[select e from kdp_Organizations e]]>
                </query>
            </loader>
        </collection>
        <collection id="departmentsDc" class="com.itk.kdp.entity.Departments" view="_minimal">
            <loader id="departmentsDl">
                <query>
                    <![CDATA[select e from kdp_Departments e]]>
                </query>
            </loader>
        </collection>
        <collection id="positionsDc" class="com.itk.kdp.entity.Position" view="_minimal">
            <loader id="positionsDl">
                <query>
                    <![CDATA[select e from kdp_Position e]]>
                </query>
            </loader>
        </collection>
        <collection id="coordinatorsDc" class="com.itk.kdp.entity.Employees" view="_minimal">
            <loader id="coordinatorsDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="vacationTypesDc" class="com.itk.kdp.entity.VacationType" view="_base">
            <loader id="vacationTypesDl">
                <query>
                    <![CDATA[select e from kdp_VacationType e]]>
                </query>
            </loader>
        </collection>
        <collection id="initiatorsDc" class="com.itk.kdp.entity.Employees" view="employees-for-start-process">
            <loader id="initiatorsDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="procTasksDs"
                    class="com.haulmont.bpm.entity.ProcTask"
                    view="procTask-frame">
            <loader id="procTasksDl">
                <query>
                    <![CDATA[select e from bpm$ProcTask e
                where e.procInstance.id = :procInstance
                order by e.createTs desc]]>
                </query>
            </loader>
        </collection>
        <collection id="messagesDc"
                    class="de.diedavids.cuba.userinbox.entity.Message"
                    view="message-with-users-view">
            <loader id="messagesDl">
                <query>
                    <![CDATA[select e from ddcui$Message e where e.shareable = :shareable]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="70%"
                resizable="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true" width="100%">
        <tabSheet id="body">
            <tab id="mainTab" caption="Заявка" spacing="true" margin="true,false,false,false">
                <form id="form" dataContainer="vacationRequestDc" width="100%">
                    <column width="50%">
                        <lookupPickerField id="employeeField" optionsContainer="employeesDc" property="employee"
                                           colspan="2"
                                           width="100%">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="open" type="picker_open"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="companyField" optionsContainer="companiesDc" property="company"
                                           width="100%" editable="false">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="open" type="picker_open"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="positionField" optionsContainer="positionsDc" property="position"
                                           width="100%" editable="false">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="open" type="picker_open"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="coordinatorField" optionsContainer="coordinatorsDc"
                                           property="coordinator"
                                           colspan="2" width="100%">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="open" type="picker_open"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="vacationTypeField" optionsContainer="vacationTypesDc"
                                           property="vacationType" width="100%" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="open" type="picker_open"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </lookupPickerField>
                        <dateField id="dateFromField" property="dateFrom" width="100%"/>
                        <textField id="vacationDaysField" property="vacationDays" editable="false" colspan="2"
                                   width="100%"/>
                        <textArea id="note" rows="5" colspan="2" property="note" width="100%"/>
                        <lookupField id="initiatorField" property="initiator" editable="false" width="100%" colspan="2"/>
                    </column>
                    <column width="50%">
                        <lookupPickerField id="departmentField" optionsContainer="departmentsDc" property="department"
                                           width="100%" editable="false">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="open" type="picker_open"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </lookupPickerField>
                        <label/>
                        <textField id="remainingVacationDaysField" property="remainingVacationDays" editable="false"
                                   width="100%" contextHelpText="msg://message.Info"/>
                        <dateField id="dateByField" property="dateBy" width="100%"/>
                    </column>
                </form>
            </tab>
            <tab id="otherTab" caption="Ход согласования" margin="true,false,false,false" expand="procTaskScroll">
                <scrollBox id="procTaskScroll" width="100%" height="100%" contentMinHeight="400px">
                    <groupTable dataContainer="procTasksDs" width="100%" height="400">
                        <columns>
                            <column id="locName" caption="Этап процесса" expandRatio="4" maxTextLength="40"/>
                            <column id="procActor" caption="Исполнитель" expandRatio="3" maxTextLength="40"/>
                            <column id="startDate" expandRatio="2"/>
                            <column id="endDate" expandRatio="2"/>
                            <column id="locOutcome" caption="Результат" expandRatio="2"/>
                            <column id="comment" maxTextLength="50" expandRatio="3"/>
                        </columns>
                        <rows/>
                    </groupTable>
                </scrollBox>
            </tab>
            <tab id="fileTab" caption="Файлы" margin="true,false,false,false">
                <scrollBox
                        height="AUTO"
                        spacing="true"
                        width="100%"
                        contentMinHeight="400px"
                >
                    <table id="attachmentsTable"
                           dataContainer="procAttachmentsDc"
                           height="400"
                           width="100%" minHeight="300px">
                        <actions>
                            <action id="create" type="create"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button id="attachmentsTableCreate" action="attachmentsTable.create"/>
                        </buttonsPanel>
                        <columns>
                            <column id="document.name"/>
                            <column id="author"/>
                            <column id="document.size"/>
                            <column id="document.createDate"/>
                            <column id="task" maxTextLength="100"/>
                            <column id="comment" maxTextLength="100"/>
                        </columns>
                    </table>
                </scrollBox>
            </tab>
            <tab id="messageTab" caption="Сообщения" margin="true,false,false,false">
                <table id="messagesTable"
                       width="100%"
                       height="400"
                       dataContainer="messagesDc">
                    <actions>
                        <action id="create"
                                caption="msg://vacationRequestEdit.newMessage"/>
                        <action id="edit" type="edit" caption="mainMsg://actions.View" icon="font-icon:SEARCH">
                            <properties>
                                <property name="screenClass"
                                          value="de.diedavids.cuba.userinbox.web.message.MessageDetails"/>
                                <property name="openMode" value="DIALOG"/>
                            </properties>
                        </action>
                    </actions>
                    <columns>
                        <column id="sender"/>
                        <column id="subject"/>
                        <column id="read"/>
                        <column id="receivedAt" sort="DESCENDING"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="messagesTable.create"/>
                        <button id="editBtn" action="messagesTable.edit"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
            <button id="sendToApprove" caption="mainMsg://form.sendToApprove"/>
            <hbox id="actionsBox" spacing="true"/>
        </hbox>
    </layout>
</window>
