<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://vacationRequestEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.vacationrequest">
    <data>
        <instance id="vacationRequestDc"
                  class="com.itk.kdp.entity.VacationRequest">
            <view extends="_local">
                <property name="employee" view="_minimal"/>
                <property name="company" view="_local"/>
                <property name="department" view="_minimal"/>
                <property name="position" view="_minimal"/>
                <property name="coordinator" view="_minimal"/>
                <property name="vacationType" view="_minimal"/>
                <property name="document" view="_minimal"/>
                <property name="initiator" view="_minimal"/>
            </view>
            <loader/>
            <instance id="documentDc" property="document"/>
        </instance>
        <collection id="employeesDc" class="com.itk.kdp.entity.Employees" view="_minimal">
            <loader id="employeesDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="companiesDc" class="com.itk.kdp.entity.Organizations" view="_local">
            <loader id="companiesDl">
                <query>
                    <![CDATA[select e from kdp_Organizations e]]>
                </query>
            </loader>
        </collection>
        <collection id="departmentsDc" class="com.itk.kdp.entity.Departments" view="_minimal">
            <loader id="departmentsDl">
                <query>
                    <![CDATA[select e from kdp_Departments e]]>
                </query>
            </loader>
        </collection>
        <collection id="positionsDc" class="com.itk.kdp.entity.Position" view="_minimal">
            <loader id="positionsDl">
                <query>
                    <![CDATA[select e from kdp_Position e]]>
                </query>
            </loader>
        </collection>
        <collection id="coordinatorsDc" class="com.itk.kdp.entity.Employees" view="_minimal">
            <loader id="coordinatorsDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="vacationTypesDc" class="com.itk.kdp.entity.VacationType" view="_minimal">
            <loader id="vacationTypesDl">
                <query>
                    <![CDATA[select e from kdp_VacationType e]]>
                </query>
            </loader>
        </collection>
        <collection id="initiatorsDc" class="com.itk.kdp.entity.Employees" view="_minimal">
            <loader id="initiatorsDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="75%"
                width="50%"
                forceDialog="true" resizable="true"/>
    <layout expand="scrollBox" spacing="true" width="100%">
        <scrollBox id="scrollBox" spacing="true">

            <form id="form" dataContainer="vacationRequestDc" width="100%" childrenCaptionWidth="AUTO">
                <column width="100%">
                    <textField id="applicationNumberField" property="applicationNumber" width="100%" required="false" editable="false"/>
                    <lookupPickerField id="companyField" optionsContainer="companiesDc" property="company" colspan="2"
                                       width="100%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="employeeField" optionsContainer="employeesDc" property="employee" colspan="2"
                                       width="100%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="vacationTypeField" optionsContainer="vacationTypesDc"
                                       property="vacationType" colspan="2" width="100%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                </column>
                <column width="100%">
                    <dateField id="applicationDateField" property="applicationDate" width="100%"/>
                </column>

                <column width="100%">
                    <label colspan="2"/>
                    <lookupPickerField id="departmentField" optionsContainer="departmentsDc" property="department"
                                       colspan="2" width="100%" editable="false">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="positionField" optionsContainer="positionsDc" property="position" colspan="2"
                                       width="100%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>

                    <lookupPickerField id="coordinatorField" optionsContainer="coordinatorsDc" property="coordinator"
                                       colspan="2" width="100%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>

                </column>

                <column width="100%">

                </column>
            </form>

            <form dataContainer="vacationRequestDc" width="100%" childrenCaptionWidth="115px">
                <column width="120px" >
                    <textField id="remainingVacationDaysField" property="remainingVacationDays"/>
                    <dateField id="dateFromField" property="dateFrom"/>
                    <dateField id="dateByField" property="dateBy"/>
                    <textField id="vacationDaysField" property="vacationDays"/>
                </column>
            </form>

            <form dataContainer="vacationRequestDc" width="100%" childrenCaptionWidth="AUTO">
                <column width="100%">

                    <hbox spacing="true">
                        <label id="labelInfo" width="100%"/>
                    </hbox>
                    <textArea id="note" cols="20" rows="5" caption="Примечание"/>
                    <hbox spacing="true">
                        <label value="msg://label.info" width="100%"/>
                    </hbox>
                    <hbox spacing="true">
                        <label value="msg://label.requiredFields" width="100%"/>
                    </hbox>
                    <!--                    <checkBox id="consentToBillingField" property="consentToBilling"/>-->
                                        <upload id="documentField" fileStoragePutMode="IMMEDIATE" showClearButton="true" property="document"
                                                showFileName="true" width="AUTO" accept=".pdf"/>
<!--                                        <lookupPickerField id="initiatorField" optionsContainer="initiatorsDc" property="initiator" -->
<!--                                                           width="100%">-->
<!--                                            <actions>-->
<!--                                                <action id="lookup" type="picker_lookup"/>-->
<!--                                                <action id="open" type="picker_open"/>-->
<!--                                                <action id="clear" type="picker_clear"/>-->
<!--                                            </actions>-->
<!--                                        </lookupPickerField>-->
                    <!--                    <checkBox id="uploadTo1CField" property="uploadTo1C"/>-->
                    <!--                    <textField id="statusField" property="status" width="100%"/>-->
                    <!--                    <textArea id="commentField" property="comment" cols="20" rows="5" caption="Комментарий"/>-->
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
