<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://countriesEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.countries">
    <data>
        <instance id="countriesDc"
                  class="com.itk.kdp.entity.Countries">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="50%"
                forceDialog="true"
                resizable="true"/>
    <layout expand="body" spacing="true">
        <scrollBox id="body" width="100%">
        <form id="form" dataContainer="countriesDc" width="100%">
            <column width="100%">
                <textField id="codeField" property="code" width="100%" required="true"/>
                <textField id="nameUaField" property="nameUa"  width="100%" required="true"/>
                <textField id="nameEnField" property="nameEn"  width="100%" required="true"/>
                <textField id="nameRuField" property="nameRu"  width="100%" required="true"/>
            </column>
        </form>
        </scrollBox>
        <hbox id="editActions" spacing="true" align="MIDDLE_CENTER">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
