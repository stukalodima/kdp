<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://employeesBrowse.caption"
        focusComponent="employeesesTable"
        messagesPack="com.itk.kdp.web.screens.employees">
    <data readOnly="true">
        <collection id="employeesesDc"
                    class="com.itk.kdp.entity.Employees">
            <view extends="_local">
                <property name="department" view="_minimal"/>
                <property name="position" view="_minimal"/>
                <property name="manager" view="_base"/>
                <property name="photo" view="_minimal"/>
                <property name="company" view="_minimal"/>
            </view>
            <loader id="employeesesDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.company = :parOrganization</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.user = :user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="75%"
                width="80%"/>
    <layout expand="employeesesTable"
            spacing="true">
        <filter id="filter"
                applyTo="employeesesTable"
                dataLoader="employeesesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="employeesesTable"
                    width="100%" multiselect="true"
                    dataContainer="employeesesDc" presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
                <action id="fillFromExternal" caption="msg://employeesBrowse.fillFromExternal"/>
            </actions>
            <columns>
                <group>
                    <column id="company" expandRatio="4" align="CENTER"/>
                </group>
                <column id="photo"/>
                <column id="fio" sort="ASCENDING" align="LEFT"/>
                <column id="department" align="LEFT"/>
                <column id="position" align="LEFT"/>
                <column id="manager" align="LEFT"/>
                <column id="workEmail" align="LEFT"/>
                <column id="mobilePhone" align="LEFT"/>
                <column id="otherEmail" align="LEFT"/>
                <column id="workPhone" align="LEFT"/>
                <column id="employmentDate" align="RIGHT">
                    <formatter class="com.haulmont.cuba.gui.components.formatters.DateFormatter" format="dd.MM.YYYY"/>
                </column>
                <column id="formEmployment" align="CENTER"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="employeesesTable.create"/>
                <button id="editBtn" action="employeesesTable.edit"/>
                <button id="removeBtn" action="employeesesTable.remove"/>
                <button id="refreshBtn" action="employeesesTable.refresh"/>
                <button id="excelBtn" action="employeesesTable.excel"/>
                <button id="fillFromExternalBtn" action="employeesesTable.fillFromExternal"/>
            </buttonsPanel>
        </groupTable>

        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
