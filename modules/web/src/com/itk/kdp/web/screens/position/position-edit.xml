<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://positionEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.position">
    <data>
        <instance id="positionDc"
                  class="com.itk.kdp.entity.Position">
            <view extends="_local">
                <property name="companyId" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="companyIdsDc" class="com.itk.kdp.entity.Organizations" view="_minimal">
            <loader>
                <query>select e from kdp_Organizations e</query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="positionDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="positionEnField" property="positionEn"/>
                <textField id="positionUaField" property="positionUa"/>
                <textField id="positionRuField" property="positionRu"/>
                <lookupField id="companyIdField" property="companyId" optionsContainer="companyIdsDc"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
