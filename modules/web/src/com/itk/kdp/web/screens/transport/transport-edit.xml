<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://transportEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.transport">
    <data>
        <instance id="transportDc"
                  class="com.itk.kdp.entity.Transport">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="transportDc">
            <column width="400px">
                <textField id="nameUaField" property="nameUa"/>
                <textField id="nameEnField" property="nameEn"/>
                <textField id="nameRuField" property="nameRu"/>
                <checkBox id="activeField" property="active"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
