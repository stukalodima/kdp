<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://streetsBrowse.caption"
        focusComponent="streetsesTable"
        messagesPack="com.itk.kdp.web.screens.streets">
    <data readOnly="true">
        <collection id="streetsesDc"
                    class="com.itk.kdp.entity.Streets">
            <view extends="_local"/>
            <loader id="streetsesDl">
                <query>
                    <![CDATA[select e from kdp_Streets e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode
            width="600" height="800"/>
    <layout expand="streetsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="streetsesTable"
                dataLoader="streetsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="streetsesTable"
                    width="100%"
                    dataContainer="streetsesDc"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="name"/>
                <column id="note"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="streetsesTable.create"/>
                <button id="editBtn" action="streetsesTable.edit"/>
                <button id="removeBtn" action="streetsesTable.remove"/>
                <button id="refreshBtn" action="streetsesTable.refresh"/>
                <button id="excelBtn" action="streetsesTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
