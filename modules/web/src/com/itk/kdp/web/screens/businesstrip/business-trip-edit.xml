<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://businessTripEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.businesstrip">
    <data>
        <instance id="businessTripDc"
                  class="com.itk.kdp.entity.BusinessTrip">
            <view extends="_local">
                <property name="employee" view="_base">
                    <property name="department"/>
                    <property name="position"/>
                    <property name="manager" view="_base">
                        <property name="user" view="_local"/>
                    </property>
                </property>
                <property name="purpose" view="_minimal">
                    <property name="nameUa"/>
                </property>
                <property name="transport" view="_minimal">
                    <property name="name"/>
                </property>
                <property name="author" view="_base">
                </property>
                <property name="organization" view="_minimal"/>
                <property name="department" view="_minimal"/>
                <property name="position" view="_minimal"/>
                <property name="procInstance" view="procInstance-full"/>
                <property name="documents" view="_local">
                    <property name="document" view="browse"/>
                    <property name="author" view="_base"/>
                </property>
            </view>
            <loader id="businessTripDl"/>
            <collection id="procAttachmentsDc" property="documents"/>
        </instance>
        <collection id="employeesDc" class="com.itk.kdp.entity.Employees" view="employees-view">
            <loader id="employeesDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="purposesDc" class="com.itk.kdp.entity.Purpose" view="_minimal">
            <loader id="purposesDl">
                <query>
                    <![CDATA[select e from kdp_Purpose e]]>
                </query>
            </loader>
        </collection>
        <collection id="transportsDc" class="com.itk.kdp.entity.Transport" view="_minimal">
            <loader id="transportsDl">
                <query>
                    <![CDATA[select e from kdp_Transport e]]>
                </query>
            </loader>
        </collection>
        <collection id="authorsDc" class="com.itk.kdp.entity.Employees" view="_minimal">
            <loader id="authorsDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="procTasksDs"
                    class="com.haulmont.bpm.entity.ProcTask"
                    view="procTask-frame">
            <loader id="procTasksDl">
                <query>
                    <![CDATA[select e from bpm$ProcTask e
                where e.procInstance.id = :procInstance
                order by e.createTs desc]]>
                </query>
            </loader>
        </collection>
        <collection id="messagesDc"
                    class="de.diedavids.cuba.userinbox.entity.Message"
                    view="message-with-users-view">
            <loader id="messagesDl">
                <query>
                    <![CDATA[select e from ddcui$Message e where e.shareable = :shareable]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="75%"
                modal="true"
                resizable="true"
                forceDialog="true"/>
    <layout spacing="true" width="100%" expand="body">
        <hbox id="body" width="100%" expand="bodyTab">
        <tabSheet id="bodyTab">
            <tab id="mainTab" caption="msg://businessTripEdit.caption" spacing="true" margin="true,false,false,false">
                    <form id="form" dataContainer="businessTripDc" width="100%" colspan="2">
                        <column width="50%">
                            <lookupPickerField id="employeeField" optionsContainer="employeesDc" property="employee"
                                               width="100%" colspan="2"
                                               contextHelpText="msg://businessTripEdit.employee.contentHelp"
                                               required="true"
                            >
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                    <action id="open" type="picker_open"/>
                                    <action id="clear" type="picker_clear"/>
                                </actions>
                            </lookupPickerField>
                            <lookupPickerField id="organizationField" property="organization" editable="false"
                                               width="100%"/>

                            <lookupPickerField id="positionField" property="position" editable="false" width="100%"/>

                            <dateField id="startDateField" property="startDate" width="100%" resolution="DAY"
                                       contextHelpText="msg://businessTripEdit.dateField.contentHelp" required="true">
                            </dateField>
                            <textField id="startPlaceField" property="startPlace" width="100%" required="true"/>
                            <textField id="detailsField" property="details" colspan="2" width="100%" required="true"
                                       contextHelpText="msg://businessTripEdit.detailsField.contentHelp"/>
                            <lookupPickerField id="purposeField" optionsContainer="purposesDc" property="purpose"
                                               width="100%" colspan="2" required="true">
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                    <action id="open" type="picker_open"/>
                                    <action id="clear" type="picker_clear"/>
                                </actions>
                            </lookupPickerField>
<!--                            <checkBoxGroup id="transportOptionGroup" align="BOTTOM_CENTER" orientation="horizontal" colspan="2"-->
<!--                            caption="msg://businessTripEdit.transport" rowspan="1" box.expandRatio="2"/>-->
                            <groupBox caption="msg://businessTripEdit.transport" width="100%" colspan="2"
                                      spacing="false" align="MIDDLE_LEFT"
                                      collapsable="true" collapsed="false">
                                <form id="formTransport" dataContainer="businessTripDc" width="100%" colspan="2"
                                      align="MIDDLE_LEFT">
                                    <column width="20%">
                                        <checkBox id="plainTransportField" property="plainTransport" width="100%"/>
                                    </column>
                                    <column width="20%">
                                        <checkBox id="trainTransportField" property="trainTransport" width="100%"/>
                                    </column>
                                    <column width="20%">
                                        <checkBox id="busTransportField" property="busTransport" width="100%"/>
                                    </column>
                                    <column width="20%">
                                        <checkBox id="autoCompanyTransportField" property="autoCompanyTransport"
                                                  width="100%"/>
                                    </column>
                                    <column width="20%">
                                        <checkBox id="autoSelfTransportField" property="autoSelfTransport"
                                                  width="100%"/>
                                    </column>
                                </form>
                            </groupBox>
                            <checkBox id="hotelField" property="hotel"/>
                            <textField id="analyticsField" property="analytics" colspan="2" width="100%" required="true"
                                       contextHelpText="msg://businessTripEdit.analytic.contentHelp"/>
                        </column>
                        <column width="50%">
                            <lookupPickerField id="departmentField" property="department" editable="false"
                                               width="100%"/>
                            <textField id="phoneNumberField" property="phoneNumber" editable="false"
                                       contextHelpText="msg://businessTripEdit.phoneNumber.contentHelp" width="100%"/>
                            <dateField id="endDateField" property="endDate" resolution="DAY"
                                       contextHelpText="msg://businessTripEdit.dateField.contentHelp" width="100%" required="true">
                            </dateField>
                            <label/>
                            <checkBox id="visaField" property="visa" width="100%"/>
                        </column>
                    </form>
                    <groupBox caption="msg://businessTripEdit.executorFields" colspan="2" collapsable="true" collapsed="false"
                              width="100%" spacing="false" id="bpmGroup">
                        <form id="bpmField" dataContainer="businessTripDc" width="100%" colspan="2" editable="false">
                            <column width="50%">
                                <textField id="destinationField" property="destination" width="100%"
                                           contextHelpText="msg://businessTripEdit.destination.contentHelp"/>
                                <lookupField id="payCenterField" property="payCenter" width="100%"
                                             contextHelpText="msg://businessTripEdit.payCenter.contentHelp"/>
                                <textField id="budgetField" property="budgetTrip" width="100%"
                                           contextHelpText="msg://businessTripEdit.budget.contentHelp"/>
                                <textField id="commentField" property="comment" colspan="2" width="100%"/>
                            </column>
                            <column width="50%">
                                <textField id="companyNameField" property="companyName" width="100%"
                                           contextHelpText="msg://businessTripEdit.companyName.contentHelp"/>
                                <textField id="isBudgetField" property="isBudget" width="100%"
                                           contextHelpText="msg://businessTripEdit.isBudget.contentHelp"/>
                            </column>
                        </form>
                    </groupBox>
                    <form dataContainer="businessTripDc" width="100%">
                        <column width="100%">
                            <lookupField id="authorField" property="author" editable="false" width="100%"/>
                        </column>
                    </form>
            </tab>
            <tab id="otherTab" caption="msg://businessTripEdit.tasks.caption" margin="true,false,false,false">
                    <groupTable dataContainer="procTasksDs" width="100%" minHeight="300px" height="100%">
                        <columns>
                            <column id="locName" expandRatio="4" maxTextLength="40"/>
                            <column id="procActor" expandRatio="3" maxTextLength="40"/>
                            <column id="startDate" expandRatio="2"/>
                            <column id="endDate" expandRatio="2"/>
                            <column id="locOutcome" caption="Результат" expandRatio="2"/>
                            <column id="comment" maxTextLength="20" expandRatio="3"/>
                        </columns>
                        <rows/>
                    </groupTable>
            </tab>
            <tab id="fileTab" caption="msg://businessTripEdit.files.caption" margin="true,false,false,false">
                    <table id="attachmentsTable"
                           dataContainer="procAttachmentsDc"
                           width="100%" minHeight="300px" height="100%">
                        <actions>
                            <action id="create" type="create"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button id="attachmentsTableCreate" action="attachmentsTable.create"/>
                        </buttonsPanel>
                        <columns>
                            <column id="document.name"  caption="msg://name"/>
                            <column id="author"/>
                            <column id="document.size" caption="msg://size"/>
                            <column id="document.createDate" caption="msg://createDate"/>
                            <column id="task" maxTextLength="100"/>
                            <column id="comment" maxTextLength="50"/>
                        </columns>
                    </table>
            </tab>
            <tab id="messageTab" caption="msg://businessTripEdit.message.caption" margin="true,false,false,false">
                <table id="messagesTable"
                       width="100%"
                       minHeight="300px"
                       height="100%"
                       dataContainer="messagesDc">
                    <actions>
                        <action id="create"
                                caption="msg://businessTripEdit.newMessage"/>
                        <action id="edit" type="edit" caption="mainMsg://actions.View" icon="font-icon:SEARCH">
                            <properties>
                                <property name="screenClass"
                                          value="de.diedavids.cuba.userinbox.web.message.MessageDetails"/>
                                <property name="openMode" value="DIALOG"/>
                            </properties>
                        </action>
                    </actions>
                    <columns>
                        <column id="sender"/>
                        <column id="subject"/>
                        <column id="read"/>
                        <column id="receivedAt" sort="DESCENDING"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="messagesTable.create"/>
                        <button id="editBtn" action="messagesTable.edit"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        </hbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="commitBtn" action="windowCommit"/>
            <button id="closeBtn" action="windowClose"/>
            <button id="sendToApprove" caption="msg://businessTripEdit.sendToApprove"/>
            <hbox id="actionsBox" spacing="true"/>
        </hbox>
    </layout>
</window>
