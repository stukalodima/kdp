<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://vacationBalanceEdit.caption"
        focusComponent="form"
        messagesPack="com.itk.kdp.web.screens.vacationbalance">
    <data>
        <instance id="vacationBalanceDc"
                  class="com.itk.kdp.entity.VacationBalance">
            <view extends="_local">
                <property name="employee" view="_base">
                    <property name="fio"/>
                    <property name="company" view="_minimal"/>
                </property>
                <property name="vacationType" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="employeesDc" class="com.itk.kdp.entity.Employees" view="_minimal">
            <loader id="employeesDl">
                <query>
                    <![CDATA[select e from kdp_Employees e]]>
                </query>
            </loader>
        </collection>
        <collection id="vacationTypesDc" class="com.itk.kdp.entity.VacationType" view="_minimal">
            <loader id="vacationTypesDl">
                <query>
                    <![CDATA[select e from kdp_VacationType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="vacationBalanceDc">
            <column width="400px">
                <lookupPickerField id="employeeField" optionsContainer="employeesDc" property="employee">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="vacationTypeField" optionsContainer="vacationTypesDc" property="vacationType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <textField id="daysField" property="days"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
