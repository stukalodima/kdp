<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://operatorAccessRequestBrowse.caption"
        focusComponent="operatorAccessRequestsTable"
        messagesPack="com.itk.kdp.web.screens.operatoraccessrequest">
    <data readOnly="true">
        <collection id="operatorAccessRequestsDc"
                    class="com.itk.kdp.entity.OperatorAccessRequest">
            <view extends="_local">
                <property name="operator" view="_minimal"/>
                <property name="employee" view="_minimal"/>
                <property name="author" view="_minimal"/>
            </view>
            <loader id="operatorAccessRequestsDl">
                <query>
                    <![CDATA[select e from kdp_OperatorAccessRequest e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="operatorAccessRequestsTable"
            spacing="true">
        <filter id="filter"
                applyTo="operatorAccessRequestsTable"
                dataLoader="operatorAccessRequestsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="operatorAccessRequestsTable"
                    width="100%"
                    dataContainer="operatorAccessRequestsDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="operator"/>
                <column id="employee"/>
                <column id="author"/>
                <column id="startDate"/>
                <column id="endDate"/>
                <column id="comment" maxTextLength="30"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="operatorAccessRequestsTable.create"/>
                <button id="editBtn" action="operatorAccessRequestsTable.edit"/>
                <button id="removeBtn" action="operatorAccessRequestsTable.remove"/>
                <button id="excelBtn" action="operatorAccessRequestsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
