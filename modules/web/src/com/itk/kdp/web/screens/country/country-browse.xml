<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://countryBrowse.caption"
        focusComponent="countriesTable"
        messagesPack="com.itk.kdp.web.screens.country">
    <data readOnly="true">
        <collection id="countriesDc"
                    class="com.itk.kdp.entity.Country">
            <view extends="_base"/>
            <loader id="countriesDl">
                <query>
                    <![CDATA[select e from kdp_Country e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="100%"
                width="100%"/>
    <layout expand="countriesTable"
            spacing="true">
        <filter id="filter"
                applyTo="countriesTable"
                dataLoader="countriesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="countriesTable"
                    width="100%"
                    dataContainer="countriesDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="codeNumeric" width="150"/>
                <column id="codeAlpha3" width="150"/>
                <column id="codeAlpha2" width="150"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="countriesTable.create"/>
                <button id="editBtn" action="countriesTable.edit"/>
                <button id="removeBtn" action="countriesTable.remove"/>
                <button id="excelBtn" action="countriesTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
